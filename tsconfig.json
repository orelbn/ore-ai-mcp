{
	"compilerOptions": {
		"target": "ES2023",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"strict": true,
		"skipLibCheck": true,
		"noEmit": true,
		"types": ["@cloudflare/workers-types", "node", "bun-types"],
		"lib": ["ES2023"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src/**/*.ts", "scripts/**/*.ts", "test/**/*.ts"]
}
