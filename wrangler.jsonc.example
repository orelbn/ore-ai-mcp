/**
 * Template Wrangler config tracked in git.
 * Copy to wrangler.jsonc and replace placeholder bucket names for your account.
 */
{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "ore-ai-mcp",
	"main": "src/index.ts",
	"compatibility_date": "2026-02-24",
	"compatibility_flags": ["nodejs_compat", "global_fetch_strictly_public"],
	"observability": {
		"enabled": true
	},
	"r2_buckets": [
		{
			"binding": "CONTEXT_BUCKET",
			"bucket_name": "your-context-bucket-dev",
			"preview_bucket_name": "your-context-bucket-dev"
		}
	],
	"vars": {
		"MCP_ALLOWED_CALLER": "ore-ai",
		"MCP_ENFORCE_CF_WORKER": "false",
		"MCP_DISABLED_TOOLS": ""
	},
	"env": {
		"production": {
			"name": "ore-ai-mcp",
			"observability": {
				"enabled": true
			},
			"r2_buckets": [
				{
					"binding": "CONTEXT_BUCKET",
					"bucket_name": "your-context-bucket-production",
					"preview_bucket_name": "your-context-bucket-production"
				}
			],
			"vars": {
				"MCP_ALLOWED_CALLER": "ore-ai",
				"MCP_ENFORCE_CF_WORKER": "true",
				"MCP_DISABLED_TOOLS": ""
			}
		}
	}
}
